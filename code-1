#include<iostream>
#include <cmath>
using namespace std;
struct node
{
    int data;
    node* next;
};

node* head;
void Insert(int x);

node Insert(node head, int x)
{
  node* temp = new node();
  temp->data = x;
  temp->next = head;
  head = temp;

  return head;
}

void Print(node* head)
{
     int count = 0;
     int sum = 0;
    cout<<"LIST IS: ";
    while(head!= NULL)
    {
        cout<<head->data<<" ";
        head = head->next;
        count++;
    }
    cout<<"\n";
    cout<<"this is count value "<<count<<"\n";
    while(head!=NULL)
    {
        sum = sum + head->data*pow(count-1,2);
        head = head->next;
        count--;
    }
    cout<<"Total value"<<sum<<"\n";

    cout<<"\n";
}

int main()
{
    head = NULL;
    cout<<"How many data want to input \n";
    int n,i,x;

    cin>>n;
    for(i=0;i<n;i++){
        cout<<"Enter the number: \n";
        cin>>x;
        head = Insert(head,x);
        Print(head);
    }

}

